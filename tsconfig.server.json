{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist/backend",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "noEmit": false
  },
  "include": ["src/backend", "src/shared"],
  "exclude": ["node_modules"]
}
