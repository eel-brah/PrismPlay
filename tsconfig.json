{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/frontend/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
